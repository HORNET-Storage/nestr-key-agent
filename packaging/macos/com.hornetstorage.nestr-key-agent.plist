<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.hornetstorage.nestr-key-agent</string>

  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/bin/keyagent</string>
  </array>

  <key>RunAtLoad</key>
  <true/>

  <key>KeepAlive</key>
  <true/>

  <key>StandardOutPath</key>
  <string>/var/log/nestr-key-agent.log</string>

  <key>StandardErrorPath</key>
  <string>/var/log/nestr-key-agent.err</string>

  <key>WorkingDirectory</key>
  <string>/usr/local/var/nestr-key-agent</string>

  <key>EnvironmentVariables</key>
  <dict>
    <key>PATH</key>
    <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
  </dict>
</dict>
</plist>
